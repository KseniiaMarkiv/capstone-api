<p style="color: green"><%= notice %></p>

<h1>States</h1>
<div class="mb-2">
  <h6 class="text-muted lead">- States total: <%= @states.count%> - </h6>
</div>
<div id="states">
  <% @states.each do |state| %>
    <%= render state %>
    <p>
      <%= button_to "Show this state", state, method: :get, class: "btn btn-outline-warning btn-sm" %>
    </p>
  <% end %>
</div>

<%= link_to "New state", new_state_path %>
