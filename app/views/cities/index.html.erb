<p style="color: green"><%= notice %></p>

<h1>Cities</h1>
<div class="mb-2">
  <h6 class="text-muted lead">- Cities total: <%= @cities.count%> - </h6>
</div>
<div id="cities">
  <% @cities.each do |city| %>
    <%= render city %>
    <p>
      <%= button_to "Show this city", city, method: :get, class: "btn btn-outline-warning btn-sm" %>
    </p>
  <% end %>
</div>

<%= link_to "New city", new_city_path %>
